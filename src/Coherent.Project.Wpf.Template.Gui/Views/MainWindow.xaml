<reactiveUi:ReactiveWindow x:TypeArguments="viewModels:MainViewModel" x:Class="Coherent.Project.Wpf.Template.Gui.Views.MainWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:local="clr-namespace:Coherent.Project.Wpf.Template"
                           xmlns:reactiveUi="http://reactiveui.net"
                           xmlns:viewModels="clr-namespace:Coherent.Project.Wpf.Template.Gui.ViewModels"
                           mc:Ignorable="d"
                           Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBox Grid.Row="0"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 x:Name="DeviceValue"/>

        <Button Grid.Row="1" x:Name="DeviceNewValueButton" Content="Update device value with random value"/>

    </Grid>
</reactiveUi:ReactiveWindow>
